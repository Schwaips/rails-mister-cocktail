<p class="home-title text-center"></p>


<div class="banner">

</div>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1517577968725-c62d5aa5cdb6?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80)">
  Everything you need to prepare your party
</div>

<div class="text-center">
    <%= link_to new_cocktail_path, class: "btn btn-light"  do %>
      <div class="create-cocktail">
        <i class="fas fa-plus-circle text-decoration-none"></i> <span>Create a new cocktail</span>
      </div>
    <% end %>
  </div>

<div class="container">

  <br/>

      <% if @cocktails.empty?  %>
              <p class="text-center">Sorry, we did not find anything =( </p>
                <div class="d-flex justify-content-center flex-row align-items-center">
                  <%= cl_image_tag "verrevide" %>
                </div>
              <br>
      <% else %>
  <div class="row">


          <% @cocktails.each do |cocktail| %>
            <div class="cards col-lg-4 mb-3 zoomIn t-animated t-element">
              <%= link_to cocktail_path(cocktail), class: "text-decoration-none" do %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
                url(
                  <% if cocktail.photo.attached? %>
                      <%= cl_image_path cocktail.photo.key %>
                    <% else %>
                      <%= cl_image_path "cocktail-default" %>
                    <% end %>)">
                  <%= cocktail.name %>
                </div>
            </div>
              <% end %>
          <% end %>
  </div>
      <% end %>
</div>
